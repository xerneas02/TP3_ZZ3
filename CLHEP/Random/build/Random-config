#! /bin/sh
# Random-config.  Generated from Random-config.in by configure.


prefix=/mnt/d/Programation/c++/simu/TP3_ZZ3/CLHEP/Random
exec_prefix=${prefix}
includedir=${prefix}/include

usage()
{
    cat  <<EOF
Usage: Random-config [OPTION]

Known values for OPTION are:

  --prefix              show installation prefix
  --cxx                 print compilation command
  --cppflags            print pre-processor flags
  --cxxflags            print C++ compiler flags
  --ldflags             print linker flags
  --libs                print libraries to link against
  --help                display this help and exit
  --version             output version information

EOF

    exit $1
}

if test $# -eq 0; then
    usage 1
fi

while test $# -gt 0; do
    case "$1" in
    -*=*)
        optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'`
	;;
    *) 
        optarg=
	;;
    esac

    case "$1" in
    --prefix=*)
	prefix="$optarg"
	;;

    --prefix)
	echo "$prefix"
	;;

    --version)
	echo Random 2.1.0.0
	exit 0
	;;

    --help)
	usage 0
	;;

    --cxx)
       	echo "CXX:    " g++
       	echo "CC:     " @CC@
       	echo "CPP:    " @CPP@
       	echo "CXXCPP: " g++ -E
       	;;

    --cppflags)
       	echo  -I${prefix}/include
       	;;

    --cxxflags)
       	echo -O -Wall -D_GNU_SOURCE -g -O2
       	;;

    --ldflags)
       	echo   -L${exec_prefix}/lib
       	;;

    --libs)
       	echo  -lCLHEP-Random-2.1.0.0 -lm
       	;;

    *)
	usage
	exit 1
	;;
    esac
    shift
done

exit 0
