#! /bin/sh
# @configure_input@


prefix=@prefix@
exec_prefix=@exec_prefix@
includedir=@includedir@

usage()
{
    cat  <<EOF
Usage: Random-config [OPTION]

Known values for OPTION are:

  --prefix              show installation prefix
  --cxx                 print compilation command
  --cppflags            print pre-processor flags
  --cxxflags            print C++ compiler flags
  --ldflags             print linker flags
  --libs                print libraries to link against
  --help                display this help and exit
  --version             output version information

EOF

    exit $1
}

if test $# -eq 0; then
    usage 1
fi

while test $# -gt 0; do
    case "$1" in
    -*=*)
        optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'`
	;;
    *) 
        optarg=
	;;
    esac

    case "$1" in
    --prefix=*)
	prefix="$optarg"
	;;

    --prefix)
	echo "$prefix"
	;;

    --version)
	echo @PACKAGE@ @VERSION@
	exit 0
	;;

    --help)
	usage 0
	;;

    --cxx)
       	echo "CXX:    " @CXX@
       	echo "CC:     " @CC@
       	echo "CPP:    " @CPP@
       	echo "CXXCPP: " @CXXCPP@
       	;;

    --cppflags)
       	echo @CPPFLAGS@ @Random_CPPFLAGS@
       	;;

    --cxxflags)
       	echo @AM_CXXFLAGS@ @CXXFLAGS@
       	;;

    --ldflags)
       	echo  @LDFLAGS@ @Random_LDFLAGS@
       	;;

    --libs)
       	echo @LIBS@ @Random_LIBS@ -lm
       	;;

    *)
	usage
	exit 1
	;;
    esac
    shift
done

exit 0
